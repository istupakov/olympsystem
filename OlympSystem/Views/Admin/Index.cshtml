@{
    Layout = null;
}
<!DOCTYPE html>
<html data-ng-app="OlympSystem.Admin">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>OlympSystem Admin</title>

    @Styles.Render("~/Content/css")
    <base href="/admin">
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation" data-ng-controller="NavbarCtrl as navbar">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" ng-click="navbar.navCollapsed = !navbar.navCollapsed">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/admin">OlympSystem<sup><span style="color:Red;">beta</span></sup></a>
            </div>
            <div class="collapse navbar-collapse" data-collapse="navbar.navCollapsed">
                <ul class="nav navbar-nav">
                    <li ng-class="{ active: navbar.isActive('/admin')}"><a href="/admin">Home</a></li>
                    <li ng-class="{ active: navbar.isActive('/admin/news')}"><a href="/admin/news">Новости</a></li>
                    <li ng-class="{ active: navbar.isActive('/admin/news2')}"><a href="/admin/news2">Новости (ngGrid)</a></li>
                    <li ng-class="{ active: navbar.isActive('/admin/compilators')}"><a href="/admin/compilators">Компиляторы</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container">
        <div data-ng-view></div>
    </div>

    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/olympsystem")
</body>
</html>