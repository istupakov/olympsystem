<h2>Компиляторы</h2>
<strong class="error">{{ compilators.error }}</strong>

<button type="button" class="btn btn-primary" data-ng-hide="compilators.addMode" data-ng-click="compilators.toggleAdd()">Добавить компилятор</button>

<div class="row">
    <form name="addCompilator" role="form" data-ng-show="compilators.addMode">
        <div class="form-group">
            <label>Name:</label>
            <input type="text" class="form-control" data-ng-model="compilators.new.Name" required />
        </div>
        <div class="form-group">
            <label>Language:</label>
            <input type="text" class="form-control" data-ng-model="compilators.new.Language" required />
        </div>
        <div class="form-group">
            <label>SourceExtension:</label>
            <input type="text" class="form-control" data-ng-model="compilators.new.SourceExtension" required />
        </div>
        <div class="form-group">
            <label>CommandLine:</label>
            <input type="text" class="form-control" data-ng-model="compilators.new.CommandLine" required />
        </div>
        <div class="form-group">
            <label>ConfigName:</label>
            <input type="text" class="form-control" data-ng-model="compilators.new.ConfigName" required />
        </div>
        <div class="checkbox">
            <label>
                <input type="checkbox" data-ng-model="compilators.new.IsActive"> IsActive
            </label>
        </div>
        <input type="submit" value="Добавить" data-ng-click="compilators.add(compilators.new)" data-ng-disabled="!addCompilator.$valid" class="btn btn-primary" />
        <input type="button" value="Отмена" data-ng-click="compilators.toggleAdd()" class="btn btn-primary" />
    </form>
</div>

<div class="row">
    <table class="table table-bordered table-hover">
        <tr>
            <th>Name</th>
            <th>Language</th>
            <th>SourceExtension</th>
            <th>CommandLine</th>
            <th>ConfigName</th>
            <th>IsActive</th>
            <th></th>
        </tr>

        <tr data-ng-repeat="cur in compilators.items">
            <td>
                <p data-ng-hide="cur.editMode">{{ cur.Name }}</p>
                <input data-ng-show="cur.editMode" class="form-control" type="text" data-ng-model="cur.Name" />
            </td>
            <td>
                <p data-ng-hide="cur.editMode">{{ cur.Language }}</p>
                <input data-ng-show="cur.editMode" class="form-control" type="text" data-ng-model="cur.Language" />
            </td>
            <td>
                <p data-ng-hide="cur.editMode">{{ cur.SourceExtension }}</p>
                <input data-ng-show="cur.editMode" class="form-control" type="text" data-ng-model="cur.SourceExtension" />
            </td>
            <td>
                <p data-ng-hide="cur.editMode">{{ cur.CommandLine }}</p>
                <input data-ng-show="cur.editMode" class="form-control" type="text" data-ng-model="cur.CommandLine" />
            </td>
            <td>
                <p data-ng-hide="cur.editMode">{{ cur.ConfigName }}</p>
                <input data-ng-show="cur.editMode" class="form-control" type="text" data-ng-model="cur.ConfigName" />
            </td>
            <td>
                <p data-ng-hide="cur.editMode">{{ cur.IsActive }}</p>
                <input data-ng-show="cur.editMode" class="form-control" type="checkbox" data-ng-model="cur.IsActive" />
            </td>
            <td>
                <p data-ng-hide="cur.editMode"><a data-ng-click="compilators.toggleEdit($index)" href="javascript:;">Редактировать</a> | <a data-ng-click="compilators.delete($index)" href="javascript:;">Удалить</a></p>
                <p data-ng-show="cur.editMode"><a data-ng-click="compilators.save(cur)" href="javascript:;">Сохранить</a> | <a data-ng-click="compilators.toggleEdit($index)" href="javascript:;">Отмена</a></p>
            </td>
        </tr>
    </table>
</div>