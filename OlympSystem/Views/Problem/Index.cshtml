@model IEnumerable<OlympSystem.Models.Problem>

@{
    ViewBag.Title = "Задачи";
}

<h2>Задачи</h2>

@using (Html.BeginForm("Index", "Problems", FormMethod.Get, new { @class = "form-inline", role = "form" }))
{
    <div class="form-group">
        @Html.Label("contest", "Олимпиада", new { @class = "sr-only" })
        @Html.TextBox("contest", null, new { @class = "form-control", placeholder="Олимпиада"})
    </div>
    <div class="form-group">
        @Html.Label("name", "Задача", new { @class = "sr-only" })
        @Html.TextBox("name", null, new { @class = "form-control", placeholder = "Задача" })
    </div>
    <button type="submit" class="btn btn-default">Поиск</button>
}
<br/>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ContestName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tags)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderBy(p => p.ContestName + p.FullName))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ContestName)
                </td>
                <td>
                    @Html.ActionLink(item.FullName, "Details", new { id = item.Id })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tags)
                </td>
                <td>@Html.ActionLink("Отправки", "Index", "Submit", new { problem = item.Id }, new { })</td>
            </tr>
        }
    </tbody>
</table>
